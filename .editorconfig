# Remove the line below if you want to inherit .editorconfig settings from higher directories
root = true

# C#/Vb files
[*.{cs,vb}]

#### Core EditorConfig Options ####

# Indentation and spacing
indent_size = 4
indent_style = space
tab_width = 4

# Misc
end_of_line = crlf
insert_final_newline = true

#### Naming styles ####

# Rules
dotnet_naming_rule.types.symbols = types
dotnet_naming_rule.types.style = types
dotnet_naming_rule.types.severity = warning

dotnet_naming_rule.types_interface.symbols = types_interface
dotnet_naming_rule.types_interface.style = types_interface
dotnet_naming_rule.types_interface.severity = warning

dotnet_naming_rule.members.symbols = members
dotnet_naming_rule.members.style = types
dotnet_naming_rule.members.severity = warning

dotnet_naming_rule.members_private_field.symbols = members_private_field
dotnet_naming_rule.members_private_field.style = members_private_field
dotnet_naming_rule.members_private_field.severity = warning

# Symbols
dotnet_naming_symbols.types.applicable_kinds = class, struct, interface, enum
dotnet_naming_symbols.types.applicable_accessibilities = public, private, internal, protected, protected_internal, private_protected, file
dotnet_naming_symbols.types.required_modifiers = 

dotnet_naming_symbols.types_interface.applicable_kinds = interface
dotnet_naming_symbols.types_interface.applicable_accessibilities = public, private, internal, protected, protected_internal, private_protected, file
dotnet_naming_symbols.types_interface.required_modifiers = 

dotnet_naming_symbols.members.applicable_kinds = field, property, event, method
dotnet_naming_symbols.members.applicable_accessibilities = public, private, internal, protected, protected_internal, private_protected, file
dotnet_naming_symbols.members.required_modifiers = 

dotnet_naming_symbols.members_private_field.applicable_kinds = field
dotnet_naming_symbols.members_private_field.applicable_accessibilities = private
dotnet_naming_symbols.members_private_field.required_modifiers = 

# Styles
dotnet_naming_style.types.required_prefix = 
dotnet_naming_style.types.required_suffix = 
dotnet_naming_style.types.word_separator = 
dotnet_naming_style.types.capitalization = pascal_case

dotnet_naming_style.types_interface.required_prefix = I
dotnet_naming_style.types_interface.required_suffix = 
dotnet_naming_style.types_interface.word_separator = 
dotnet_naming_style.types_interface.capitalization = pascal_case

dotnet_naming_style.members.required_prefix = 
dotnet_naming_style.members.required_suffix = 
dotnet_naming_style.members.word_separator = 
dotnet_naming_style.members.capitalization = pascal_case

dotnet_naming_style.members_private_field.required_prefix = m_
dotnet_naming_style.members_private_field.required_suffix = 
dotnet_naming_style.members_private_field.word_separator = 
dotnet_naming_style.members_private_field.capitalization = pascal_case

#### Qualification styles ####

dotnet_style_qualification_for_field = true:error
dotnet_style_qualification_for_property = true:error
dotnet_style_qualification_for_event = true:error
dotnet_style_qualification_for_method = true:error
